<% title "Projects" %>

<% form_tag projects_path, :method => :get, :class => "fright" do %>
  <p>
    <%= text_field_tag :search, params[:search], :size => 50 %>
    <%= submit_tag "Search", :name => nil %>
  </p>
<% end %>

<%- if @projects.empty? -%>
  No active projects.
<%- else -%>
  <%= render :partial => "project", :collection => @projects %>
<%- end -%>

<p><%= link_to "New Project", new_project_path %></p>


<%- unless @archived_projects.empty? -%>
  <hr />
  
  <h2>Archived projects</h2>
  <%= render :partial => "project", :collection => @archived_projects %>
<%- end -%>

