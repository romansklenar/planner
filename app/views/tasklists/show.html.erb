<% title "Tasks" %>


<%- unless @tasks.empty? -%>
<ul id="tasks" class="tasklist">
  <%= render :partial => "tasks/task", :collection => @tasks %>
</ul>
<%= sortable_element("tasks", :url => sort_tasks_path, :complete => visual_effect(:highlight, "tasks"), :handle => "handle-vertical") %>
<%- end -%>

<noscript><%= submit_tag "Complete checked tasks" %></noscript>
