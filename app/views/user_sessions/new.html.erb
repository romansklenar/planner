<% title "Log in" %>

<p>Don't have an account? <%= link_to "Sign up!", new_account_path %></p>

<% form_for @user_session do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :login %><br />
    <%= f.text_field :login %>
  </p>
  <p>
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </p>
  <p>
    <%= f.check_box :remember_me %><%= f.label :remember_me %><br />
  </p>
  <p><%= f.submit "Log in" %></p>
<% end %>
